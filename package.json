{
  "name": "magic-home-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js --mode development",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:react",
    "build:run": "npm-run-all build start:electron",
    "build:electron": "webpack --config webpack/electron.webpack.js",
    "build:react": "webpack --config webpack/react.webpack.js",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --dir",
    "test": "jest"
  },
  "keywords": [],
  "author": "Max Atslega <max@atslega.de>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.19.1",
    "@babel/preset-env": "7.19.1",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@commitlint/core": "9.1.2",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "10.4.9",
    "@types/electron-devtools-installer": "2.2.2",
    "@types/jest": "26.0.24",
    "@types/react": "16.14.32",
    "@types/react-dom": "16.9.16",
    "@types/react-router": "5.1.19",
    "@types/react-router-config": "5.0.6",
    "@types/react-router-dom": "5.3.3",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "babel-loader": "8.2.5",
    "babel-plugin-transform-class-properties": "6.24.1",
    "commitizen": "4.2.5",
    "core-js": "3.25.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.2.0",
    "electron": "^11.1.1",
    "electron-builder": "22.14.13",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "3.2.0",
    "electron-log": "4.4.8",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-standard": "14.1.1",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-standard": "4.1.0",
    "html-webpack-plugin": "4.5.2",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "react-router-config": "5.1.1",
    "regenerator-runtime": "0.13.9",
    "source-map-support": "0.5.21",
    "ts-jest": "26.5.6",
    "typescript": "3.9.10",
    "wait-on": "5.3.0",
    "webpack": "4.46.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.3"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^4.1.0",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1"
  },
  "build": {
    "productName": "Magic-Home Desktop",
    "appId": "de.atslega.mhd",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "packages"
    },
    "extraResources": [
      "./assets/**"
    ],
    "files": [
      "package.json",
      "dist/**",
      "./assets/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
